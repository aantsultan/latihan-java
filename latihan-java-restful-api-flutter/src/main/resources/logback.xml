<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="map" class="com.latihan.java.restfulapi.flutter.config.logback.MapAppender">
        <prefix>test</prefix>
    </appender>

    <appender name="mask" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.core.encoder.LayoutWrappingEncoder">
            <layout class="com.latihan.java.restfulapi.flutter.config.logback.MaskingLayoutConfig">
                <maskPattern>\"password\"\s*:\s*\"(.*?)\"</maskPattern> <!-- password JSON pattern -->
                <maskPattern>\"confirmPassword\"\s*:\s*\"(.*?)\"</maskPattern> <!-- confirmPassword JSON pattern -->
                <pattern>%-5p [%d{ISO8601,UTC}] [%thread] %c: %m%n%rootException</pattern>
            </layout>
        </encoder>
    </appender>

    <root level="info">
        <appender-ref ref="map"/>
        <appender-ref ref="mask" />
    </root>
</configuration>